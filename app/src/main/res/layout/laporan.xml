<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/component_padding_margin"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            style="@style/Hijau"
            android:layout_width="fill_parent"

            android:layout_height="@dimen/padding_button"
            android:text="LAPORAN TRANSAKSI PER PRODUK"
            android:id="@+id/btn_produk"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            style="@style/Hijau"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_button"
            android:text="LAPORAN TRANSAKSI PER MAKETER"
            android:id="@+id/btn_marketer"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        >

        <Button
            android:layout_height="@dimen/padding_button"
            style="@style/Hijau"
            android:layout_width="fill_parent"

            android:text="LAPORAN TRANSAKSI PER DISTIBUTOR"
            android:id="@+id/btn_distributor"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>